@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<section id="content">
	<section class="legal-intro">
        <div class="inner-wrapper">
            @Html.Raw(Model.Content.GetPropertyValue("intro"))
        </div>
	</section>
	<section class="legal-topic">
        <div class="inner-wrapper">
            @Html.Raw(Model.Content.GetPropertyValue("topics"))
        </div>
	</section>
	<section class="legal-content">
        <div class="inner-wrapper">
            @Html.Raw(Model.Content.GetPropertyValue("bodyText"))
        </div>
	</section>
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="lead-bar footer-lead">
            <a href="http://starbucksfs.com/Leadform">Become a Customer</a>
            <img src="/img/sbs-footer.png" />
        </div>
    } else {
            
        <div class="lead-bar footer-lead signed-in">
            <div class="signed-in-footer">
                <span class="question">Interested in participating in a program? Have questions?</span>
                <a class="std-leadform contact" href="/contact-form/">Contact Us</a>
            </div>
            <img src="/img/sbs-footer.png" /> 
        </div>
    }
</section>